{
    "rate_limiting": {
        "requests_per_second": 100,
        "block_duration": 3600
    },
    "input_validation": {
        "max_item_id_length": 50,
        "max_quantity": 1000000,
        "max_days_ahead": 365
    },
    "logging": {
        "level": "INFO",
        "file": "security.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "security": {
        "allowed_ips": [],
        "blocked_ips": [],
        "require_authentication": true,
        "token_expiration": 3600
    },
    "data_validation": {
        "required_columns": ["date", "item_id", "quantity"],
        "date_format": "%Y-%m-%d",
        "min_date": "2020-01-01",
        "max_date": "2025-12-31"
    },
    "error_handling": {
        "max_retries": 3,
        "retry_delay": 1,
        "log_errors": true
    }
} 